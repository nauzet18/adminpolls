= simple_form_for resource, defaults: { wrapper_html: {class: 'form-group'}, input_html: {class: 'form-control '}} do |f|

  = f.input :name
  = f.input :description, input_html: {  rows: 5 }

  %h1= Group.model_name.human.pluralize
  %table.table.table-hover.table-striped
    %thead
      %th= Group.human_attribute_name :id
      %th= Group.human_attribute_name :name
    %tbody
    = f.simple_fields_for :groups do |g|
      %tr
        %td
          = g.object.try(:id)
        %td
          = link_to g.object.try(:name), edit_group_path(g.object)        

  = render :partial => "shared/botton_form", :locals => { f: f }
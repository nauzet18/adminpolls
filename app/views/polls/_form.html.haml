= simple_form_for resource do |f|
  = f.input :name
  = f.input :description

  %h1= Group.model_name.human.pluralize
  %table
    %thead
      %th= Group.human_attribute_name :id
      %th= Group.human_attribute_name :name
    %tbody
    = f.simple_fields_for :groups do |g|
      %tr
        %td
          = g.object.try(:id)
        %td
          = link_to g.object.try(:name), edit_group_path(g.object)        

  %button.btn.btn-default
    %i.fa.fa-times-circle
      = t( :close ) 

  = f.button :submit , class: "btn btn-default" do 
    %i.fa.fa-check-circle
      = t( :save )


- content_for :title, Question.model_name.human.pluralize

%table.table.table-hover.table-striped
  %th
    = Question.human_attribute_name :id
  %th
    = Question.human_attribute_name :name
  %th
    = Group.model_name.human
  %th
    = t('actions')
  - collection.each do |c|
    %tr
      %td
        = c.id
      %td
        = link_to c.name, edit_resource_path(c)
      %td
        = c.group.try(:name)
      %td
        = link_to resource_path(c), method: :delete,  data: { confirm: "Are you sure?" } do
          .glyphicon.glyphicon-trash


.row
  .container{align: "right"}
    = link_to t(:new), new_resource_path, :class => 'btn btn-primary button'

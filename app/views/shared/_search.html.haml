.shearchs.form-group{align: "right"}
  = form_tag( {:controller => controller_filter, :action => action_filter}, method: :get) do |f|
    
    = select_tag :search_select, options_for_select( options, params[:search_select]), prompt: "Choose one", id: 'search_select'

    = text_field_tag :search_text, params[:search_text], id: 'search_text', placeholder: t('find_by_name')

    = button_tag(type: 'submit', class: "btn btn-primary") do
      %i.fa.fa-search
        = t( :search )
    
    = button_tag(type: 'submit', class: "btn btn-custom-primary", onclick: "$('#search_text').val(''); $('#search_select').val('');" ) do
      %i.fa.fa-search
        = t( :clear )
